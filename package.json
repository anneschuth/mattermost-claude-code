{
  "name": "claude-threads",
  "version": "0.14.0",
  "description": "Share Claude Code sessions live in a Mattermost channel with interactive features",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "claude-threads": "./dist/index.js",
    "claude-threads-mcp": "./dist/mcp/permission-server.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mattermost",
    "bot",
    "ai",
    "cli",
    "anthropic",
    "chat"
  ],
  "author": "Anne Schuth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anneschuth/claude-threads.git"
  },
  "bugs": {
    "url": "https://github.com/anneschuth/claude-threads/issues"
  },
  "homepage": "https://github.com/anneschuth/claude-threads#readme",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "commander": "^14.0.2",
    "diff": "^8.0.2",
    "prompts": "^2.4.2",
    "update-notifier": "^7.3.1",
    "ws": "^8.18.0",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "@types/prompts": "^2.4.9",
    "@types/update-notifier": "^6.0.8",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "vitest related --run"
    ]
  }
}
