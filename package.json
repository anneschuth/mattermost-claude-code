{
  "name": "claude-threads",
  "version": "0.16.6",
  "description": "Share Claude Code sessions live in a Mattermost channel with interactive features",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "claude-threads": "./dist/index.js",
    "claude-threads-mcp": "./dist/mcp/permission-server.js"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun && bun build src/mcp/permission-server.ts --outdir dist/mcp --target bun",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mattermost",
    "bot",
    "ai",
    "cli",
    "anthropic",
    "chat",
    "bun"
  ],
  "author": "Anne Schuth",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anneschuth/claude-threads.git"
  },
  "bugs": {
    "url": "https://github.com/anneschuth/claude-threads/issues"
  },
  "homepage": "https://github.com/anneschuth/claude-threads#readme",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "commander": "^14.0.2",
    "diff": "^8.0.2",
    "prompts": "^2.4.2",
    "semver": "^7.7.3",
    "update-notifier": "^7.3.1",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.1",
    "@types/update-notifier": "^6.0.8",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.1"
  },
  "engines": {
    "bun": ">=1.2.21"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bun test --bail"
    ]
  }
}
